
<div role="form" class="col-lg-6 col-md-6 col-sm-6 col-lg-offset-3 add-form">
  <legend>Add event</legend>
  <fieldset>

  <%= form_for @event, :html => { :multipart => true } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group form-inline">
        <%= f.text_field :event_name, class: "form-control", placeholder: 'Event name' %>
      <!--</div>
      <div class="form-group"> -->
        <%= f.select(:event_type, options_for_select([['Exhibition', 'Exhibition'], 
                                                      ['Conference', 'Conference']]), { prompt: 'Select event type'},
                                                      { class: 'form-control' }) %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :from_date, 'From' %>
        <%= f.date_field :from_date, { prompt: true, class: "form-control"} %>
      <!-- </div>
      <div class="form-group"> -->
        <%= f.label :until_date, 'Until' %>
        <%= f.date_field :until_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :event_description, class: "form-control", placeholder: 'A few words about event...' %>
      </div>
      <div class="form-group form-inline">
        <%= f.text_field :country, class: "form-control", placeholder: 'Country' %>
      <!-- </div>
      <div class="form-group"> -->
        <%= f.text_field :city, class: "form-control", placeholder: 'City' %>
      </div>
      <div class="form-group">
        <%= f.text_field :event_website, class: "form-control", placeholder: "Website link" %>
      </div>
      <div class="form-group">
        <%= f.text_field :venue_name, class: "form-control", placeholder: "Venue name" %>
      </div>
      <div class="form-group">
        <%= f.text_field :venue_address, class: "form-control", placeholder: "Venue address" %>
      </div>
      <div class="form-group">
        <%= f.file_field :event_image %>
      </div>

      <div class="form-group">
        <%= f.submit 'Submit Event', class: "btn btn-block btn-success" %>
      </div>

  <% end %>

</fieldset>
</div>